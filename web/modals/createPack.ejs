<link rel="stylesheet" href="modals/createPack.css"/>

<div class="modal overlay centered newPackTab" id="modal-createPack" style="display: none;">
    <div class="flex flex-gap-8 flex-align-center">
        <span class="material-symbols-outlined">new_window</span>
        <h1 class="flex-grow">{{packs.newPack.title}}</h1>
        <button class="square transparent small" onclick="FrogModals.hideModal('createPack')">
            <span class="material-symbols-outlined">close</span>
        </button>
    </div>

    <input type="text" placeholder="{{packs.newPack.input}}"/>
    <h4>{{packs.newPack.description}}</h4>

    <button onclick="FrogPacksUI.createPack()">{{commons.create}}</button>
</div>